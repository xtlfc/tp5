/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 用户信息栏 */
.user-info-bar {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 4rpx solid #FF6B9D;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-status {
  font-size: 24rpx;
  color: #FF6B9D;
}

.stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.stat-item {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

/* 摇骰子区域 */
.dice-section {
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.dice-container {
  margin-bottom: 40rpx;
  transition: transform 0.3s ease;
}

.dice-container.rolling {
  animation: shake 0.5s infinite;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  75% { transform: translateX(10rpx); }
}

.dice {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  position: relative;
  transform-style: preserve-3d;
  transition: transform 0.6s ease;
}

.dice.rolling {
  animation: roll 0.6s ease-in-out;
}

@keyframes roll {
  0% { transform: rotateX(0deg) rotateY(0deg); }
  100% { transform: rotateX(360deg) rotateY(360deg); }
}

.dice-face {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background: white;
  border: 4rpx solid #FF6B9D;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.dot {
  width: 30rpx;
  height: 30rpx;
  background: #FF6B9D;
  border-radius: 50%;
  margin: 10rpx;
}

/* 骰子点数布局 */
.face-1 .center { margin: 0; }
.face-2 .top-left { align-self: flex-start; justify-self: flex-start; }
.face-2 .bottom-right { align-self: flex-end; justify-self: flex-end; }
.face-3 .top-left { align-self: flex-start; justify-self: flex-start; }
.face-3 .center { margin: 0; }
.face-3 .bottom-right { align-self: flex-end; justify-self: flex-end; }
.face-4 .top-left { align-self: flex-start; justify-self: flex-start; }
.face-4 .top-right { align-self: flex-start; justify-self: flex-end; }
.face-4 .bottom-left { align-self: flex-end; justify-self: flex-start; }
.face-4 .bottom-right { align-self: flex-end; justify-self: flex-end; }
.face-5 .top-left { align-self: flex-start; justify-self: flex-start; }
.face-5 .top-right { align-self: flex-start; justify-self: flex-end; }
.face-5 .center { margin: 0; }
.face-5 .bottom-left { align-self: flex-end; justify-self: flex-start; }
.face-5 .bottom-right { align-self: flex-end; justify-self: flex-end; }
.face-6 .top-left { align-self: flex-start; justify-self: flex-start; }
.face-6 .top-right { align-self: flex-start; justify-self: flex-end; }
.face-6 .middle-left { align-self: center; justify-self: flex-start; }
.face-6 .middle-right { align-self: center; justify-self: flex-end; }
.face-6 .bottom-left { align-self: flex-end; justify-self: flex-start; }
.face-6 .bottom-right { align-self: flex-end; justify-self: flex-end; }

.dice-info {
  margin-bottom: 40rpx;
}

.dice-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #FF6B9D;
  margin-bottom: 20rpx;
}

.dice-tip {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.roll-btn {
  width: 300rpx;
  height: 80rpx;
  font-size: 32rpx;
}

/* 匹配结果 */
.match-result {
  margin-bottom: 30rpx;
}

.result-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.result-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B9D;
  margin-bottom: 10rpx;
}

.result-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.matched-user {
  padding: 30rpx;
}

.user-card {
  display: flex;
  align-items: center;
}

.matched-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid #FF6B9D;
}

.matched-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.matched-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.matched-distance {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.matched-time {
  font-size: 24rpx;
  color: #999;
}

.chat-btn {
  width: 160rpx;
  height: 60rpx;
  font-size: 28rpx;
}

/* 历史记录 */
.history-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-count {
  font-size: 24rpx;
  color: #999;
}

.history-list {
  display: flex;
  flex-direction: column;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #F0F0F0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B9D;
  width: 80rpx;
  text-align: center;
}

.history-time {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  text-align: center;
}

.history-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.history-status.matched {
  background: #E8F5E8;
  color: #52C41A;
}

.history-status.no-match {
  background: #FFF2E8;
  color: #FA8C16;
}

/* 摇动提示 */
.shake-tip {
  text-align: center;
  padding: 40rpx;
  margin-top: 30rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #999;
}