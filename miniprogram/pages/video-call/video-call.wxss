/* pages/video-call/video-call.wxss */
.video-call-container {
  height: 100vh;
  background: #000;
  position: relative;
  overflow: hidden;
}

/* 主视频区域 */
.main-video-area {
  width: 100%;
  height: 100%;
  position: relative;
}

.local-video {
  width: 100%;
  height: 100%;
  background: #1a1a1a;
}

.local-video.muted {
  background: #333;
}

.remote-video {
  width: 100%;
  height: 100%;
  background: #1a1a1a;
}

.remote-video.muted {
  background: #333;
}

/* 通话信息 */
.call-info {
  position: absolute;
  top: 60rpx;
  left: 40rpx;
  right: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 10;
}

.caller-info {
  display: flex;
  align-items: center;
}

.caller-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.caller-details {
  display: flex;
  flex-direction: column;
}

.caller-name {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.call-status {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.call-duration {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

/* 控制按钮 */
.control-buttons {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 60rpx;
  z-index: 10;
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: scale(0.95);
}

.control-btn.active {
  background: rgba(255, 107, 157, 0.8);
}

.control-btn.hangup {
  background: #FF4D4F;
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.btn-text {
  font-size: 20rpx;
  color: white;
}

/* 通话状态提示 */
.call-status-tip {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.8);
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  z-index: 10;
}

.tip-text {
  font-size: 28rpx;
  color: white;
}

/* 网络状态 */
.network-status {
  position: absolute;
  top: 60rpx;
  right: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  z-index: 10;
}

.network-text {
  font-size: 24rpx;
  color: white;
}

/* 加载状态 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 20;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #FF6B9D;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 40rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: white;
}