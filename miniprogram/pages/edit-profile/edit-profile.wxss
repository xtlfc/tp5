/* pages/edit-profile/edit-profile.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #F8F9FA;
}

/* 头像编辑 */
.avatar-section {
  text-align: center;
  padding: 60rpx 0;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  display: inline-block;
  margin-bottom: 20rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid #FF6B9D;
}

.avatar-edit-btn {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  width: 60rpx;
  height: 60rpx;
  background: #FF6B9D;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(255, 107, 157, 0.3);
}

.edit-icon {
  font-size: 32rpx;
  color: white;
}

.avatar-tip {
  font-size: 24rpx;
  color: #666;
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #F0F0F0;
  padding-bottom: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #F8F9FA;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 10rpx;
}

.form-picker {
  flex: 1;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 10rpx;
}

.form-textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 10rpx;
  min-height: 120rpx;
  line-height: 1.5;
}

.char-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 10rpx;
}

.form-switch {
  transform: scale(0.8);
}

/* 兴趣爱好 */
.hobby-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.hobby-tag {
  padding: 20rpx 30rpx;
  background: #F8F9FA;
  border-radius: 50rpx;
  border: 2rpx solid #E0E0E0;
  transition: all 0.3s ease;
}

.hobby-tag.selected {
  background: #FF6B9D;
  border-color: #FF6B9D;
}

.tag-text {
  font-size: 26rpx;
  color: #666;
}

.hobby-tag.selected .tag-text {
  color: white;
}

/* 保存按钮 */
.save-section {
  padding: 40rpx 0;
}

.save-btn {
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}