.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #F5F5F5;
}

/* 聊天头部 */
.chat-header {
  background: #FFFFFF;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #E5E5E5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.header-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
}

.header-info {
  flex: 1;
}

.header-name {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.header-status {
  font-size: 24rpx;
  color: #999999;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.6;
}

.action-icon:active {
  opacity: 1;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 20rpx 30rpx;
  overflow-y: auto;
}

/* 系统消息 */
.system-message {
  text-align: center;
  margin-bottom: 40rpx;
}

.system-text {
  font-size: 24rpx;
  color: #999999;
  background: rgba(255, 255, 255, 0.8);
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  display: inline-block;
}

/* 消息项 */
.message-item {
  margin-bottom: 40rpx;
}

.message-time {
  text-align: center;
  margin-bottom: 20rpx;
}

.time-text {
  font-size: 24rpx;
  color: #999999;
}

.message-content {
  display: flex;
  align-items: flex-end;
}

.message-item.mine .message-content {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin: 0 20rpx;
}

/* 消息气泡 */
.message-bubble {
  position: relative;
  max-width: 500rpx;
  padding: 24rpx 32rpx;
  border-radius: 20rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.message-item.mine .message-bubble {
  background: linear-gradient(135deg, #FF6B9D 0%, #C44EB1 100%);
  color: #FFFFFF;
}

.message-bubble::before {
  content: '';
  position: absolute;
  bottom: 15rpx;
  left: -12rpx;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-right-color: #FFFFFF;
}

.message-item.mine .message-bubble::before {
  left: auto;
  right: -12rpx;
  border-right-color: transparent;
  border-left-color: #FF6B9D;
}

/* 消息内容 */
.message-text {
  font-size: 28rpx;
  line-height: 1.4;
  word-wrap: break-word;
}

.message-image {
  max-width: 400rpx;
  max-height: 400rpx;
  border-radius: 12rpx;
}

/* 语音消息 */
.voice-message {
  display: flex;
  align-items: center;
  min-width: 150rpx;
}

.voice-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.voice-icon.playing {
  animation: voiceWave 0.5s infinite alternate;
}

@keyframes voiceWave {
  0% { transform: scale(1); }
  100% { transform: scale(1.2); }
}

.voice-duration {
  font-size: 26rpx;
  color: inherit;
}

/* 已读状态 */
.read-status {
  text-align: right;
  margin-top: 8rpx;
}

.read-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
}

.message-item:not(.mine) .read-text {
  color: #999999;
}

/* 销毁倒计时 */
.destroy-timer {
  position: absolute;
  top: -30rpx;
  right: 0;
  background: rgba(255, 107, 157, 0.9);
  color: #FFFFFF;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
}

.timer-text {
  font-size: 20rpx;
}

/* 正在输入提示 */
.typing-indicator {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.typing-dots {
  display: flex;
  margin-right: 16rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #999999;
  margin-right: 6rpx;
  animation: typing 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes typing {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

.typing-text {
  font-size: 24rpx;
  color: #999999;
}

/* 输入区域 */
.input-area {
  background: #FFFFFF;
  border-top: 1px solid #E5E5E5;
  padding: 20rpx 30rpx;
}

.input-toolbar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.tool-icon {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.6;
}

.tool-icon:active {
  opacity: 1;
}

/* 文字输入 */
.text-input-area {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.message-input {
  flex: 1;
  background: #F8F8F8;
  border: 1px solid #E0E0E0;
  border-radius: 30rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  min-height: 60rpx;
}

.send-btn {
  width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  background: #E5E5E5;
  color: #999999;
  border: none;
  line-height: 60rpx;
  padding: 0;
}

.send-btn.active {
  background: #FF6B9D;
  color: #FFFFFF;
}

/* 语音输入 */
.voice-input-area {
  text-align: center;
}

.voice-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  background: #F8F8F8;
  color: #666666;
  border: 1px solid #E0E0E0;
  transition: all 0.2s;
}

.voice-btn.recording {
  background: #FF6B9D;
  color: #FFFFFF;
  transform: scale(0.95);
}

/* 表情面板 */
.emoji-panel {
  background: #FFFFFF;
  border-top: 1px solid #E5E5E5;
  height: 300rpx;
  padding: 20rpx 0;
}

.emoji-list {
  height: 100%;
  white-space: nowrap;
  padding: 0 30rpx;
}

.emoji-item {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 12rpx;
  background: #F8F8F8;
}

.emoji-item:active {
  background: #E0E0E0;
}

.emoji-text {
  font-size: 48rpx;
}

/* 连接状态 */
.connection-status {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: rgba(255, 152, 0, 0.9);
  color: #FFFFFF;
  text-align: center;
  padding: 16rpx 0;
  font-size: 24rpx;
  z-index: 1000;
}

.status-text {
  font-size: 24rpx;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .message-bubble {
    max-width: 400rpx;
    padding: 20rpx 24rpx;
  }
  
  .message-image {
    max-width: 300rpx;
    max-height: 300rpx;
  }
}