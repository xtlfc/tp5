/* pages/match/match.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 统计区域 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-card {
  padding: 30rpx;
}

.stats-header {
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stats-content {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #FF6B9D;
  margin-bottom: 10rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 聊天会话 */
.chat-sessions {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-count {
  font-size: 24rpx;
  color: #999;
}

.session-list {
  display: flex;
  flex-direction: column;
}

.session-item {
  margin-bottom: 20rpx;
  transition: transform 0.2s ease;
}

.session-item:active {
  transform: scale(0.98);
}

.session-content {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.session-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid #FF6B9D;
}

.session-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.session-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.session-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.session-time {
  font-size: 24rpx;
  color: #999;
}

.session-message {
  display: flex;
  align-items: center;
}

.message-preview {
  font-size: 28rpx;
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.no-message {
  font-size: 28rpx;
  color: #999;
  font-style: italic;
}

.session-actions {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.unread-badge {
  background: #FF6B9D;
  color: white;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.badge-text {
  font-size: 20rpx;
  font-weight: bold;
}

.action-icon {
  font-size: 32rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.empty-subtext {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.go-roll-btn {
  width: 300rpx;
  height: 80rpx;
  font-size: 32rpx;
}

/* 匹配历史 */
.match-history {
  margin-bottom: 30rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
}

.history-item {
  margin-bottom: 20rpx;
}

.history-content {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.history-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 3rpx solid #FF6B9D;
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.history-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.history-details {
  font-size: 24rpx;
  color: #666;
}

.history-status {
  margin-left: 20rpx;
}

.status-text {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.status-text.active {
  background: #E8F5E8;
  color: #52C41A;
}

.status-text.inactive {
  background: #F0F0F0;
  color: #999;
}