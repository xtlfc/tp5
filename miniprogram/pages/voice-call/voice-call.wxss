/* pages/voice-call/voice-call.wxss */
.voice-call-container {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* 背景 */
.call-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.1;
}

.background-pattern {
  width: 100%;
  height: 100%;
  background-image: radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.2) 0%, transparent 50%),
                    radial-gradient(circle at 75% 75%, rgba(255, 255, 255, 0.2) 0%, transparent 50%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20px); }
}

/* 通话信息 */
.call-info {
  position: absolute;
  top: 60rpx;
  left: 40rpx;
  right: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 10;
}

.caller-info {
  display: flex;
  align-items: center;
}

.caller-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.caller-details {
  display: flex;
  flex-direction: column;
}

.caller-name {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.call-status {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.call-duration {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

/* 控制按钮 */
.control-buttons {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 60rpx;
  z-index: 10;
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: scale(0.95);
}

.control-btn.active {
  background: rgba(255, 107, 157, 0.8);
}

.control-btn.hangup {
  background: #FF4D4F;
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.btn-text {
  font-size: 20rpx;
  color: white;
}

/* 通话状态提示 */
.call-status-tip {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.8);
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  z-index: 10;
}

.tip-text {
  font-size: 28rpx;
  color: white;
}

/* 网络状态 */
.network-status {
  position: absolute;
  top: 60rpx;
  right: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  z-index: 10;
}

.network-text {
  font-size: 24rpx;
  color: white;
}

/* 加载状态 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 20;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #FF6B9D;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 40rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: white;
}

/* 来电界面 */
.incoming-call {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 15;
}

.incoming-info {
  text-align: center;
  margin-bottom: 100rpx;
}

.incoming-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 40rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.incoming-name {
  display: block;
  font-size: 36rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.incoming-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.incoming-actions {
  display: flex;
  gap: 60rpx;
}

.answer-btn, .reject-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  border-radius: 50%;
  border: none;
  transition: all 0.3s ease;
}

.answer-btn {
  background: #52C41A;
}

.reject-btn {
  background: #FF4D4F;
}

.answer-btn:active, .reject-btn:active {
  transform: scale(0.95);
}

.answer-icon, .reject-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.answer-text, .reject-text {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
}