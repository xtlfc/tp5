/* pages/chat/chat.wxss */
.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
}

/* 聊天头部 */
.chat-header {
  background-color: #fff;
  padding: 0 32rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
}

.header-left {
  width: 120rpx;
}

.back-btn {
  background: none;
  border: none;
  padding: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: #007aff;
  font-weight: bold;
}

.header-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid #e5e5e5;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.2;
}

.user-status {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.header-right {
  width: 120rpx;
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.header-btn {
  background: none;
  border: none;
  padding: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-icon {
  font-size: 36rpx;
  color: #333;
}

/* 聊天消息列表 */
.chat-messages {
  flex: 1;
  padding: 0 32rpx;
  background-color: #f7f7f7;
}

.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  gap: 16rpx;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #e5e5e5;
  border-top: 3rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.message-item {
  display: flex;
  flex-direction: column;
}

.time-divider {
  text-align: center;
  margin: 32rpx 0;
}

.time-text {
  background-color: rgba(0, 0, 0, 0.1);
  color: #999;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.message-content {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  max-width: 100%;
}

.message-item.self .message-content {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 2rpx solid #e5e5e5;
}

.self-avatar {
  border-color: #007aff;
}

.other-avatar {
  border-color: #e5e5e5;
}

.message-bubble {
  max-width: 60%;
  padding: 24rpx;
  border-radius: 24rpx;
  position: relative;
  word-wrap: break-word;
}

.self-bubble {
  background-color: #007aff;
  color: #fff;
  border-top-right-radius: 8rpx;
}

.other-bubble {
  background-color: #fff;
  color: #333;
  border-top-left-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.message-text {
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
}

.message-image {
  max-width: 100%;
  border-radius: 12rpx;
  display: block;
}

.message-status {
  text-align: right;
  margin-top: 8rpx;
}

.status-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
}

.status-text.sending {
  color: rgba(255, 255, 255, 0.7);
}

.status-text.sent {
  color: rgba(255, 255, 255, 0.7);
}

.status-text.read {
  color: rgba(255, 255, 255, 0.9);
}

.status-text.failed {
  color: #ff3b30;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 输入区域 */
.chat-input {
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  padding: 24rpx 32rpx;
}

.input-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.voice-btn {
  background: none;
  border: none;
  padding: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.voice-icon {
  font-size: 32rpx;
  color: #666;
}

.input-wrapper {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 0 24rpx;
  min-height: 60rpx;
  display: flex;
  align-items: center;
}

.message-input {
  flex: 1;
  background: none;
  border: none;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #333;
}

.message-input::placeholder {
  color: #999;
}

.emoji-btn, .more-btn {
  background: none;
  border: none;
  padding: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.emoji-icon, .more-icon {
  font-size: 32rpx;
  color: #666;
}

.send-btn {
  background-color: #e5e5e5;
  color: #999;
  border: none;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  min-width: 120rpx;
  transition: all 0.3s ease;
}

.send-btn.active {
  background-color: #007aff;
  color: #fff;
}

.send-btn:disabled {
  background-color: #e5e5e5;
  color: #999;
}

/* 录音提示 */
.record-tip {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 24rpx;
  padding: 48rpx;
  z-index: 1000;
}

.record-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.record-text {
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}

.record-time {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}

/* 消息销毁提示 */
.destroy-tip {
  background-color: #fff3cd;
  border: 1rpx solid #ffeaa7;
  padding: 16rpx 32rpx;
  text-align: center;
  margin: 0 32rpx 16rpx;
  border-radius: 16rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #856404;
}