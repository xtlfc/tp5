/* pages/report/report.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #F8F9FA;
}

/* 被举报用户 */
.reported-user {
  margin-bottom: 30rpx;
  padding: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 3rpx solid #FF6B9D;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 24rpx;
  color: #666;
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #F0F0F0;
  padding-bottom: 20rpx;
}

/* 举报类型 */
.report-types {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.report-type {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #F8F9FA;
  border-radius: 15rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.report-type.selected {
  background: rgba(255, 107, 157, 0.1);
  border-color: #FF6B9D;
}

.type-icon {
  font-size: 40rpx;
  margin-right: 30rpx;
}

.type-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.type-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.type-desc {
  font-size: 24rpx;
  color: #666;
}

.type-check {
  font-size: 32rpx;
  color: #FF6B9D;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.report-type.selected .type-check {
  opacity: 1;
}

/* 举报详情 */
.form-item {
  position: relative;
}

.report-textarea {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 10rpx;
  min-height: 200rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

.char-count {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 证据上传 */
.evidence-upload {
  margin-top: 20rpx;
}

.upload-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.upload-item {
  position: relative;
  width: 100%;
  aspect-ratio: 1;
}

.evidence-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.remove-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #FF4D4F;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-icon {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
}

.upload-btn {
  width: 100%;
  aspect-ratio: 1;
  background: #F8F9FA;
  border: 2rpx dashed #D0D0D0;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.upload-btn:active {
  background: #E8E8E8;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}

/* 联系方式 */
.contact-input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 10rpx;
  box-sizing: border-box;
}

/* 提交按钮 */
.submit-section {
  padding: 40rpx 0;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 举报须知 */
.notice-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.notice-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.notice-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.notice-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}