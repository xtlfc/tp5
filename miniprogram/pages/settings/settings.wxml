<!--pages/settings/settings.wxml-->
<view class="settings-container">
  <!-- 设置头部 -->
  <view class="settings-header">
    <text class="settings-title">设置</text>
  </view>

  <!-- 设置菜单 -->
  <view class="settings-menu">
    <!-- 账户设置 -->
    <view class="menu-section">
      <view class="section-title">账户设置</view>
      <view class="menu-list">
        <view class="menu-item" bindtap="goToAccountSettings">
          <view class="menu-left">
            <text class="menu-icon">👤</text>
            <text class="menu-text">账户信息</text>
          </view>
          <text class="menu-arrow">></text>
        </view>
        <view class="menu-item" bindtap="goToPrivacySettings">
          <view class="menu-left">
            <text class="menu-icon">🔒</text>
            <text class="menu-text">隐私设置</text>
          </view>
          <text class="menu-arrow">></text>
        </view>
        <view class="menu-item" bindtap="goToNotificationSettings">
          <view class="menu-left">
            <text class="menu-icon">🔔</text>
            <text class="menu-text">通知设置</text>
          </view>
          <text class="menu-arrow">></text>
        </view>
      </view>
    </view>

    <!-- 应用设置 -->
    <view class="menu-section">
      <view class="section-title">应用设置</view>
      <view class="menu-list">
        <view class="menu-item" bindtap="goToAppearanceSettings">
          <view class="menu-left">
            <text class="menu-icon">🎨</text>
            <text class="menu-text">外观设置</text>
          </view>
          <text class="menu-arrow">></text>
        </view>
        <view class="menu-item" bindtap="goToLanguageSettings">
          <view class="menu-left">
            <text class="menu-icon">🌐</text>
            <text class="menu-text">语言设置</text>
          </view>
          <text class="menu-arrow">></text>
        </view>
        <view class="menu-item" bindtap="goToStorageSettings">
          <view class="menu-left">
            <text class="menu-icon">💾</text>
            <text class="menu-text">存储管理</text>
          </view>
          <text class="menu-arrow">></text>
        </view>
      </view>
    </view>

    <!-- 安全设置 -->
    <view class="menu-section">
      <view class="section-title">安全设置</view>
      <view class="menu-list">
        <view class="menu-item" bindtap="goToSecuritySettings">
          <view class="menu-left">
            <text class="menu-icon">🛡️</text>
            <text class="menu-text">安全中心</text>
          </view>
          <text class="menu-arrow">></text>
        </view>
        <view class="menu-item" bindtap="goToBlockedUsers">
          <view class="menu-left">
            <text class="menu-icon">🚫</text>
            <text class="menu-text">黑名单管理</text>
          </view>
          <text class="menu-arrow">></text>
        </view>
      </view>
    </view>

    <!-- 帮助与支持 -->
    <view class="menu-section">
      <view class="section-title">帮助与支持</view>
      <view class="menu-list">
        <view class="menu-item" bindtap="goToHelpCenter">
          <view class="menu-left">
            <text class="menu-icon">❓</text>
            <text class="menu-text">帮助中心</text>
          </view>
          <text class="menu-arrow">></text>
        </view>
        <view class="menu-item" bindtap="goToFeedback">
          <view class="menu-left">
            <text class="menu-icon">💬</text>
            <text class="menu-text">意见反馈</text>
          </view>
          <text class="menu-arrow">></text>
        </view>
        <view class="menu-item" bindtap="goToAbout">
          <view class="menu-left">
            <text class="menu-icon">ℹ️</text>
            <text class="menu-text">关于我们</text>
          </view>
          <text class="menu-arrow">></text>
        </view>
      </view>
    </view>

    <!-- 退出登录 -->
    <view class="menu-section">
      <view class="menu-list">
        <view class="menu-item logout-item" bindtap="logout">
          <view class="menu-left">
            <text class="menu-icon">🚪</text>
            <text class="menu-text">退出登录</text>
          </view>
          <text class="menu-arrow">></text>
        </view>
      </view>
    </view>
  </view>
</view>