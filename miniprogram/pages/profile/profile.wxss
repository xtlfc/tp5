/* pages/profile/profile.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  margin-bottom: 30rpx;
}

.user-header {
  display: flex;
  align-items: center;
  padding: 40rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 6rpx solid #FF6B9D;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.user-location {
  font-size: 24rpx;
  color: #666;
}

.edit-btn {
  background: none;
  border: none;
  padding: 10rpx;
}

.edit-icon {
  font-size: 40rpx;
}

/* 统计数据 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-card {
  padding: 30rpx;
}

.stats-header {
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 15rpx;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #FF6B9D;
  margin-bottom: 10rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 30rpx;
}

.menu-card {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #F0F0F0;
  transition: background-color 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #F8F9FA;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 30rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #999;
}

/* 位置设置 */
.location-section {
  margin-bottom: 30rpx;
}

.location-card {
  padding: 30rpx;
}

.location-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.location-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.location-switch {
  transform: scale(0.8);
}

.location-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 退出登录 */
.logout-section {
  margin-bottom: 30rpx;
}

.logout-btn {
  width: 100%;
  height: 80rpx;
  background: #FF4D4F;
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.logout-btn:active {
  background: #FF7875;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx;
}

.version-text {
  font-size: 24rpx;
  color: #999;
}