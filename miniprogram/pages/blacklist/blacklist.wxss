/* pages/blacklist/blacklist.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #F8F9FA;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 黑名单列表 */
.blacklist-container {
  margin-bottom: 30rpx;
}

.blacklist-item {
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 3rpx solid #FF6B9D;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.block-time {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.block-reason {
  font-size: 24rpx;
  color: #FF6B9D;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  background: none;
  border: 2rpx solid #FF6B9D;
  color: #FF6B9D;
  border-radius: 20rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
}

.action-btn.unblock {
  background: #FF6B9D;
  color: white;
}

.action-btn:active {
  transform: scale(0.95);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.empty-subtext {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 批量操作 */
.batch-actions {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
}

.batch-btn {
  flex: 1;
  background: #F0F0F0;
  color: #666;
  border: none;
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.batch-btn.danger {
  background: #FF6B9D;
  color: white;
}

.batch-btn[disabled] {
  background: #E0E0E0;
  color: #999;
}